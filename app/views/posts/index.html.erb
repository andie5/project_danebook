          </div>
          <div class="row">
            <div class="col-md-12 centre-text">
              <%= link_to "See More Friends", "#" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-1 right-pane">
        <%= render partial: 'new_post', locals: { user: current_user, post: @post} %>

         <%= render partial: 'view_post', locals: { user: @user, post: @post} %>
        </div>
      </div> <!-- left pane div -->
    </div> <!-- whole timeline content div -->
  </div> <!-- pages div to separate stylesheet from homepage -->
</div>        
