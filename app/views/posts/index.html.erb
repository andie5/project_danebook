<% content_for :title do %>
  <title>Timeline</title>
<% end %>
<div class="container">
  <div class="pages">
    <%= render partial: '/shared/toolbar', locals: { user: current_user, profile: @user.profile } %>
    <div class="row timeline-container">
      <div class="col-md-5 left-pane">
        <div class="row section-title">
          <div class="col-md-12">
            <h4>About (Text Area)</h4></div>
          </div>
        <div class="row about-summary">
          <div class="col-md-12">
            <p><span>Born on:</span> <%= @user.profile.birthday %></p>
            <p><span>Went to school at:</span> <%= @user.profile.college %></p>
            <p><span>Hometown:</span> <%= @user.profile.hometown %></p>
            <p><span>Currently Lives:</span> <%= @user.profile.currently_lives %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 section-title">
            <h4>Photos(123) (Copied Text Area)</h4></div>
          </div>
        <div class="row section-outline">
          <div class="col-md-4">
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50">
            </div>
          </div>
          <div class="col-md-4">
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50">
            </div>
          </div>
          <div class="col-md-4">
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50"/>
            </div>
            <div class="img-thumb-small">
              <img src="https://unsplash.it/50/50">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 centre-text">
              <%= link_to "See More Photos", "#" %>            
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 section-title">
            <h4>Friends(5+2) (Copied Text Area)</h4>
          </div>
        </div>
        <div class="row section-outline">
           <div class="col-md-4">
            <div class="img-thumb-small row">
              <img class="col-md-12 friend-link" src="https://unsplash.it/50/50"/>
              <%= link_to "Ronald Weasley", "#", class: "col-md-12" %>
            </div>
            <div class="img-thumb-small row">
              <img class="col-md-12 friend-link" src="https://unsplash.it/50/50"/>
              <%= link_to "Ginny Weasley", "#", class: "col-md-12" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="img-thumb-small row">
              <img class="col-md-12 friend-link" src="https://unsplash.it/50/50">
              <%= link_to "Hermione Granger", "#", class: "col-md-12" %>
            </div>
            <div class="img-thumb-small row">
              <img class="col-md-12 friend-link" src="https://unsplash.it/50/50"/>
              <%= link_to "Slytherine", "#", class: "col-md-12" %> 
            </div>
          </div>
          <div class="col-md-4">
            <div class="img-thumb-small row">
              <img class="col-md-12 friend-link" src="https://unsplash.it/50/50"/>
              <%= link_to "Lord Voldemort", "#", class: "col-md-12" %> 
            </div>
