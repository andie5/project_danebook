 <% @posts.each do |post| %>
  <div class="section-outline">
    <div class="row comment-title"> 
      <div class="col-md-1">
        <%= image_tag("harry_potter_small.jpg", size: "30x30") %>
      </div>
      <div class="col-md-11">
         <%= link_to "#{post_user_fullname(post)}", user_path(user) %>
        <p>Posted on <%= post.created_at %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p><%= post.body %></p>
      </div>
    </div>
  </div>
  <div class="row comment-links last-post">
    <div class="col-md-10">
      <% if current_user_liked?(post) %>
        <%= link_to "Unlike", like_path(Like.find_by(user: current_user, likeable: post)), method: 'delete' %>
      <% else %>
         <%= link_to "Like", likes_path(:like => {:likeable_id => post.id, :likeable_type => post.class.name} ), method: 'post' %>
      <% end %>
    </div>
    <div class="col-md-2">
      <%= link_to "Delete", user_post_path(user, post),
           data: { confirm: "Are you sure?" },
            method: :delete %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if count_likes(post) > 0 %>
          <p>
            <%= link_to "#{display_likes(post)}", user_path(user) %> 
            <%= " likes this" %>
          </p>
        <% end %>
      </div>
    </div>
    <hr></hr>
     <%= render partial: 'comments/view_comment', locals: { user: user, post: post, comments: post.comments} %> 
     <%= render partial: 'comments/post_comment', locals: { user: user, post: post, comment: post.comments.build} %> 
  </div>
<% end %>
