<%= comments.each do |comment| %>
  <div class="row comment-title">
    <div class="col-md-1">
      <%= image_tag("harry_potter_small.jpg", size: "30x30") %>
    </div>
    <div class="col-md-11">
      <p><%= link_to "#{post_user_fullname(post)}", user_path(user) %> Said on <%= comment.created_at %></p>
      <div class="row">
        <div class="col-md-12">
          <p><%= comment.body %></p>
        </div>
        <div class="row">
          <div class="col-md-10">
            <p><% if current_user_liked?(post) %>
                  <%= link_to "Unlike", likes_path(:like => {:likeable_id => post.id, :likeable_type => post.class.name} ), method: 'delete' %>
                <% else %>
                     <%= link_to "Like", likes_path(:like => {:likeable_id => post.id, :likeable_type => post.class.name} ), method: 'post' %>
                <% end %>
            </p>
          </div>
          <div class="col-md-2">
            <p><%= link_to "Delete", comment_path(comment),
           data: { confirm: "Are you sure?" },
            method: :delete %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>