 <% @posts.each do |post| %>
  <% @profile = find_profile(post.user.id) %>
  <div class="section-outline">
    <div class="row comment-title"> 
      <div class="col-md-1">
        <%= image_tag("harry_potter_small.jpg", size: "30x30") %>
      </div>
      <div class="col-md-11">
         <!-- link_to "#{full_name(post)}", user_path(post.user) %> -->
        <p>Posted on <%= post.created_at %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p><%= post.body %></p>
      </div>
    </div>
  </div>
  <div class="row comment-links section-footer">
    <div class="col-md-1">
      <%= link_to "Like", "#" %>
    </div>
    <div class="col-md-9">
      <%= link_to "Comments", "#" %>
    </div>
    <div class="col-md-2">
      <%= link_to "Delete", post_path(post),
           data: { confirm: "Are you sure?" },
            method: :delete %>
    </div>
  </div>
<% end %>
